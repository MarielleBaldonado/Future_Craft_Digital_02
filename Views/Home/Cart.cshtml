@{
    ViewBag.Title = "Cart";
}

<!-- Start Page Title -->
<div class="page-title-area" style="z-index:-1;">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container" style="user-select:none;">
                <h1>Cart</h1>
            </div>
        </div>
    </div>

    <div class="shape1"><img src="~/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/assets/img/shape2.svg" alt="shape"></div>
</div>
<!-- End Page Title -->
<!-- Cart Main-->
<div>
    <!--Table-->
    <div class="main-container mb-5" style="margin-top:0;z-index:100;">
        <div class="container text-center container-md container-sm container-xl container-xxl">
            <!--THeader-->
            <div class="row mb-3">
                <div class="col d-flex justify-content-between">
                    <p class="m-0 p-0" style="user-select: none;">1 item</p>
                    <a class="p-0" style="cursor:pointer;">DELETE ALL</a>
                </div>
            </div>
            <div class="row row-cols-6 border border-1 justify-content-between py-3 bg-white cart-header d-none d-md-flex">
                <div class="col form-check d-flex align-items-center justify-content-center m-0" style="width:20px;">
                    <input type="checkbox" id="selectAll" class="form-check-input m-0" />
                </div>
                <div class="col-3 d-flex align-items-center justify-content-start m-0 ">
                    <h6 class="m-0">Product</h6>
                </div>
                <div class="col d-flex align-items-center justify-content-center m-0">
                    <h6 class="m-0">Unit Price</h6>
                </div>
                <div class="col d-flex align-items-center justify-content-center m-0">
                    <h6 class="m-0">Quantity</h6>
                </div>
                <div class="col d-flex align-items-center justify-content-center m-0">
                    <h6 class="m-0">Total Price</h6>
                </div>
                <div class="col m-0 d-flex align-items-center justify-content-center">
                    <button class="item-del-btn" style="display: none;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                        </svg>
                    </button>
                </div>
            </div>
            <hr class="w-0 m-0 mb-1" style="background: none; color: transparent;">
            <!--Whitespace-->
            <div class="row row-cols-6 align-items-center justify-content-center" style="display:none;"></div>
            <!--Table Body-->
            @* if the cart is empty *@
            <div class="row align-items-center justify-content-evenly py-4 d-none" style="height: 11.5rem;user-select: none;">
                <h6 class="fw-normal" style="color: gray;">There are no items in this cart</h6>
            </div>
            @* else, DISPLAY the items. Use this div below as a row*@
            <div class="row row-cols-6 py-4 cart-body-row mb-3 mb-md-0 position-relative justify-content-md-between">
                <div class="position-absolute w-100 h-100 rounded-4 top-0 start-0 p-0 d-block d-md-none" style="box-shadow: 1px 5px 15px rgba(0, 0, 0, 0.2)"></div>
                <div class="col form-check d-flex align-items-center justify-content-center m-0" style="width:20px;">
                    <input type="checkbox" class="form-check-input m-0" />
                </div>
                @* For medium devices up to larger devices. *@
                <div class="d-none d-md-flex col-3 justify-content-start align-items-center p-0" style="user-select: none;">
                    <img class="w-25 h-100" src="../assets/img/shop-image/software/microsoft-office.png" alt="Image Of Microsoft Office 2019">
                    @* Product Name *@
                    <p class="m-0 w-75 text-left">Microsoft Office 2019</p>
                </div>
                <div class="d-none d-md-flex col align-items-center justify-content-center mb-1" style="user-select:none;">
                    @* Unit Price *@
                    <p class="m-0 text-center">100.00</p>
                </div>
                <div class="d-none d-md-flex col align-items-center justify-content-center">
                    <button class="qty-btn qty-dec border border-1">
                        <p class="m-0">-</p>
                    </button>
                    @* Quantity *@
                    <p class="m-0 mx-2" style="user-select:none;">1</p>
                    <button class="qty-btn qty-inc border border-1">
                        <p class="m-0">+</p>
                    </button>
                </div>
                @* For small devices *@
                <div class="col d-flex align-items-start justify-content-start m-0 pe-0 d-md-none" style="user-select:none;">
                    <img class="img-fluid" src="../assets/img/shop-image/software/microsoft-office.png" alt="Image Of Microsoft Office 2019">
                </div>
                <div class="d-flex flex-column flex-fill p-0 flex-md-row d-md-none">
                    <div class="col d-flex align-items-center justify-content-start m-0 mb-1" style="user-select:none;">
                        @* Product Name *@
                        <p class="m-0 text-dark fw-bold text-left text-truncate">Microsoft Office 2019</p>
                    </div>
                    <div class="col d-flex align-items-center justify-content-start mb-1" style="user-select:none;">
                        @* Unit Price *@
                        <p class="text-left">100.00</p>
                    </div>
                    <div class="col d-flex align-items-center justify-content-start">
                        <button class="qty-btn qty-dec border border-1">
                            <p class="m-0">-</p>
                        </button>
                        @* Quantity *@
                        <p class="m-0 mx-2" style="user-select:none;">1</p>
                        <button class="qty-btn qty-inc border border-1">
                            <p class="m-0">+</p>
                        </button>
                    </div>
                </div>
                @* This will be hidden in small devices *@
                <div class="col d-flex align-items-center justify-content-center d-none d-md-flex" style="user-select:none;">
                    @* Subtotal for Unit Price *@
                    <p>100.00</p>
                </div>
                @* Button *@
                <div class="col d-flex align-items-center justify-content-center p-0">
                    @* This will only be SHOWN in small devices *@
                    <button class="btn btn-outline-danger h-100 w-75 d-block d-md-none p-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                        </svg>
                    </button>
                    @* This will only be HIDDEN in small devices *@
                    <button class="item-del-btn w-75 d-none d-md-block">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                            <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                        </svg>
                    </button>
                </div>
            </div>

        </div>
    </div>

    <!--Cart Summary-->
    <div class="main-container mb-4" style="margin-top:0;z-index:101;">
        <div class="container d-flex flex-column p-5 rounded" style="box-shadow: 1px 1px 10px rgba(0,102,102,0.2);">
            <div class="summary-title mb-4 text-left" style="user-select: none;">
                <h4 class="m-0">Order Summary</h4>
            </div>
            <div class="summary-totals-info d-flex flex-column p-0 p-sm-4 mb-4 position-relative" style="user-select: none;">
                <div class="position-absolute w-100 h-100 border border-1 top-0 start-0 rounded m-0 p-0 d-none d-sm-block"></div>
                <div class="subtotal-row d-flex align-items-center justify-content-between mb-4">
                    <h6 class="m-0 fw-normal">Subtotal</h6>
                    <h6 class="m-0 fw-normal" style="color: #6084a4;">₱100.00</h6>
                </div>
                <div class="shipping-row d-flex align-items-center justify-content-between mb-4">
                    <h6 class="m-0 fw-normal">Shipping fee</h6>
                    <h6 class="m-0 fw-normal" style="color: #6084a4;">₱0.00</h6>
                </div>
                <div class="total-row d-flex align-items-center justify-content-between">
                    <h6 class="m-0 fw-normal">Total</h6>
                    <h6 class="m-0 fw-bolder" style="color: #6084a4;">₱100.00</h6>
                </div>
            </div>
            <div class="summary-checkout mb-0 text-right">
                <a class="btn btn-primary d-none d-md-inline" href="@Url.Action("Checkout", "Home")">PROCEED TO CHECKOUT</a>
                <a class="btn btn-primary w-100 d-block d-md-none" href="@Url.Action("Checkout", "Home")">PROCEED TO CHECKOUT</a>
            </div>
        </div>
    </div>
</div>