@{
    ViewBag.Title = "Checkout";
}

<!-- Start Page Title -->
<div class="page-title-area" style="z-index:-1;">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container" style="user-select:none;">
                <h1>Checkout</h1>
            </div>
        </div>
    </div>

    <div class="shape1"><img src="~/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/assets/img/shape2.svg" alt="shape"></div>
</div>
<!-- End Page Title -->
<!-- Checkout Main -->
<div>
    @* Delivery address *@
    <div class="main-container mb-3" style="margin-top:0;z-index:100;">
        <div class="container">
            <div class="top-liner"></div>
            <div class="d-flex bg-white" style="box-shadow: 1px 1px 10px rgba(0,102,102,0.2);">
                <div class="d-flex flex-column flex-grow-1 px-4 py-2 justify-content-center" style="user-select: none;">
                    <div class="d-flex mb-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                            <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                        </svg>
                        <h6 class="m-0 ms-2">Delivery Address</h6>
                    </div>
                    <p class="m-0 fw-bold">Juan Dela Cruz (+63) 9123456789</p>
                    <p class="fw-light m-0">Apt. 577 811 Johnston Knolls, New Ethel, NC 89610</p>
                </div>
                <div class="d-flex align-items-center justify-content-center p-5">
                    <a class="m-0" href="#">Change</a>
                </div>
            </div>
        </div>
    </div>

    @* Products ordered *@
    <div class="main-container mb-5" style="margin-top:0;z-index:100;">
        <div class="container text-center">
            <div class="bg-white w-100 m-0 pt-4 pb-3 px-3" style="box-shadow: 1px 1px 10px rgba(0,102,102,0.2);user-select: none;">
                @* Table Header *@
                <div class="row bg-white m-0 mb-3">
                    <div class="col-6 text-left">
                        <h5 class="m-0 fw-normal">Products Ordered</h5>
                    </div>
                    <div class="col-2">
                        <h6 class="m-0 fw-normal" style="color:#6084a4">Unit Price</h6>
                    </div>
                    <div class="col-2">
                        <h6 class="m-0 fw-normal" style="color:#6084a4">Amount</h6>
                    </div>
                    <div class="col text-right">
                        <h6 class="m-0 fw-normal" style="color:#6084a4">Item Subtotal</h6>
                    </div>
                </div>
                @* Table Body *@
                <div class="row bg-white m-0 my-4">
                    <div class="col-6 text-left">
                        <div class="d-flex m-0 fw-normal">
                            <div class="item-img d-flex justify-content-center align-items-center" style="width:25px;height:25px;">
                                <img class="w-100" src="../assets/img/shop-image/software/microsoft-office.png" alt="Image Of Microsoft Office 2019">
                            </div>
                            <p class="m-0 text-black ms-2">Microsoft Office 2019</p>
                        </div>
                    </div>
                    <div class="col-2 text-center">
                        <p class="m-0 text-black fw-normal" style="color:#6084a4;">₱100.00</p>
                    </div>
                    <div class="col-2 text-center">
                        <p class="m-0 text-black fw-normal" style="color:#6084a4;">1</p>
                    </div>
                    <div class="col text-right">
                        <p class="m-0 text-black fw-normal" style="color:#6084a4;">₱100.00</p>
                    </div>
                </div>
                <div class="row bg-white m-0 my-4">
                    <div class="col-6 text-left">
                        <div class="d-flex m-0 fw-normal">
                            <div class="item-img d-flex justify-content-center align-items-center" style="width:25px;height:25px;">
                                <img class="w-100" src="../assets/img/shop-image/software/microsoft-office.png" alt="Image Of Microsoft Office 2019">
                            </div>
                            <p class="m-0 text-black ms-2">Microsoft Office 2019</p>
                        </div>
                    </div>
                    <div class="col-2 text-center">
                        <p class="m-0 text-black fw-normal" style="color:#6084a4;">₱100.00</p>
                    </div>
                    <div class="col-2 text-center">
                        <p class="m-0 text-black fw-normal" style="color:#6084a4;">1</p>
                    </div>
                    <div class="col text-right">
                        <p class="m-0 text-black fw-normal" style="color:#6084a4;">₱100.00</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>